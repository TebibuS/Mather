<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_billAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount:"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editText_billAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.00"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@id/textView_billAmount"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView_tipPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Percentage:"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@id/editText_billAmount"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/seekBar_tipPercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/textView_tipPercentage"/>

    <TextView
        android:id="@+id/textView_selectedTipPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15%"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/seekBar_tipPercentage"
        android:layout_alignEnd="@id/seekBar_tipPercentage"/>

    <TextView
        android:id="@+id/textView_tipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Amount:"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@id/seekBar_tipPercentage"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_calculatedTipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/seekBar_tipPercentage"
        android:layout_alignEnd="@id/seekBar_tipPercentage"/>

    <TextView
        android:id="@+id/textView_totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount:"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@id/textView_tipAmount"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_calculatedTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textView_tipAmount"
        android:layout_alignEnd="@id/seekBar_tipPercentage"/>

</RelativeLayout>

